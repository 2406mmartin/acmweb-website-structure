<script>
    const variants = ['everyone', 'designers', 'enthusiasts', 'programmers', 'developers', 'students', 'creators', 'innovators', 'entrepreneurs', 'educators'];
    const textElement = document.getElementById('random-text') as HTMLSpanElement;
    const startButton = document.getElementById('start-button') as HTMLButtonElement;
    const floatingElements = document.querySelectorAll('.float');
    const max = 5
    const min = 3

    startButton.addEventListener('click', function() {
        // Cool animation

        window.location.href = '/about';
    });

    floatingElements.forEach(element => {
        const randomDuration = (Math.random() * (max - min + 1)) + min;
        (element as HTMLElement).style.animationDuration = `${randomDuration}s`;
    });

    let currentIndex = 0;
    setInterval(() => {
        textElement.textContent = variants[currentIndex];
        currentIndex = (currentIndex + 1) % variants.length;
    }, 2000);
</script>

